<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/size_of_top"
        android:layout_marginStart="@dimen/size_of_photo"
        android:text="@string/bot"
        />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bot"
        android:layout_marginTop="@dimen/size_of_top"
        android:text="@string/user"
        android:layout_marginEnd="@dimen/size_of_photo"
        android:textSize="@dimen/size_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:layout_marginTop="@dimen/margin_of_top"
        android:layout_toEndOf="@+id/bot"
        android:hint="@string/input"
        />

</RelativeLayout>
